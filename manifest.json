{
  "manifest_version": 2,
  "name": "Interrobanged",
  "description": "A simple script that edits interrobangs into your web page",
  "version": "2.0",
  "icons": { "128": "icon.png" },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Interrobanged"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["tabs", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
